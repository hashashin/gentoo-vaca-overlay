depend() {
    use net
}

start() {
    ebegin "Starting amun"
    start-stop-daemon --start --quiet --pidfile /var/run/amun.pid \
	--make-pidfile --background --exec /opt/amun/amun_server.py
    eend $?
}

stop() {
    ebegin "Stopping amun"
    start-stop-daemon --stop --quiet --pidfile /var/run/amun.pid
    eend $?
}
